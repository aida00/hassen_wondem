/**
 * Implements hook_page_attachments().
 */
function hhass_page_attachments(array &$attachments) {
  $path_matcher = \Drupal::service('path.matcher');

  // Front page
  if ($path_matcher->isFrontPage()) {
    $attachments['#attached']['library'][] = 'hhass/frontpage';
  }

  // Your portfolio view
  $route = \Drupal::routeMatch()->getRouteName();
  if ($route === 'view.portfolio.page_1') {
    $attachments['#attached']['library'][] = 'hhass/portfolio';
  }
}
/**
 * Implements hook_preprocess_page().
 */
