  // Add example content for the front page.
  if (\Drupal::routeMatch()->getRouteName() === '<front>') {
    $variables['front_projects'] = [
      [
        'title' => 'Project One',
        'summary' => 'A summary of project one.',
        'image' => '/themes/custom/hhass/images/project-1.jpg',
        'url' => '/project/1',
      ],
      [
        'title' => 'Project Two',
        'summary' => 'A summary of project two.',
        'image' => '/themes/custom/hhass/images/project-2.jpg',
        'url' => '/project/2',
      ],
