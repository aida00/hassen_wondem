{#
  Custom front page layout for node/3
#}
{% extends "page.html.twig" %}

{% block content %}
	{{ attach_library('hhass/frontpage') }}

	<div class="min-h-screen bg-gray-100">
		<section class="flex flex-col items-center justify-center text-center px-4 py-20 bg-white" x-data="{ opened: false }">
			<h1 class="text-5xl font-extrabold mb-4">Welcome to My Portfolio</h1>
			<p class="text-xl text-gray-600 mb-8">
				Crafting modern Drupal sites with AlpineJS, Vite, and TailwindCSS.
			</p>
			<button @click="opened = !opened" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring">
				Explore Projects
			</button>
		</section>

		<section class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 py-16 px-4">
			<div class="bg-white rounded-2xl shadow-lg overflow-hidden" x-data>
				<img src="/themes/custom/hhass/images/project-1.jpg" alt="Project 1" class="w-full h-48 object-cover"/>
				<div class="p-6">
					<h2 class="text-2xl font-semibold mb-2">Project One</h2>
					<p class="text-gray-500 mb-4">Highlights of project one with modern styling and interaction.</p>
					<a href="#" class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Read More</a>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
