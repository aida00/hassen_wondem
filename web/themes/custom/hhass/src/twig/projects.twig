<section class="py-16 bg-white">
	<div class="max-w-5xl mx-auto grid gap-6 md:grid-cols-2 lg:grid-cols-3 px-4">
		{% for project in projects %}
			<a href="{{ project.url }}" target="_blank" class="bg-gray-100 rounded-lg shadow hover:shadow-lg transition block overflow-hidden">
				<img src="{{ project.image }}" alt="{{ project.title }}" class="w-full h-40 object-cover">
				<div class="p-4">
					<h3 class="text-xl font-bold text-blue-600">{{ project.title }}</h3>
					<p class="text-gray-600 mt-2">{{ project.summary }}</p>
				</div>
			</a>
		{% endfor %}
	</div>
</section>
