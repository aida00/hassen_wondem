<form{{ attributes }}>
  {{ children }}

  <div class="mt-6 flex items-center">
    <div class="form-actions form-group js-form-wrapper form-wrapper">
      <input
        class="js-form-submit form-submit cursor-pointer flex max-w-xs flex-1 items-center justify-center rounded-md border border-transparent bg-primary-600 py-3 px-8 sm:px-32 text-base font-medium text-white hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-gray-50 sm:w-full"
        type="submit"
        value="{{ 'Add to cart'|t }}"
      />
    </div>

    {% if bamboo_render_views('product_flag', 'wishlist') %}
      <div class="ml-4 flex flex-col justify-center py-3 px-3">
        {{ bamboo_render_views('product_flag', 'wishlist') }}
      </div>
    {% endif %}
  </div>
</form>
