<fieldset
    class="product--rendered-attribute fieldgroup form-composite required js-form-item form-item js-form-wrapper form-wrapper mt-4"
    aria-required="true"
>
    <legend>
        <span class="fieldset-legend js-form-required form-required text-sm font-normal text-gray-600"><%= label %></span>
    </legend>

    <div class="fieldset-wrapper flex space-4">


        <div class="form-radios">
            <% _.each(attributeValues, function(currentValue, key) { %>
                <div class="js-form-item form-item js-form-type-radio form-type-radio js-form-item-purchased-entity-attributes-attribute-<%= attributeId %> form-item-purchased-entity-attributes-attribute-<%= attributeId %>">


                        <input
                            type="radio"
                            class="form-radio"
                            name="attribute_<%= attributeId %>" id="attribute_<%= attributeId %>_<%= currentValue.attribute_value_id %>"
                            value="<%= currentValue.attribute_value_id %>" <%= (activeValue === currentValue.attribute_value_id) ? 'checked' : '' %>
                        >
                            <label
                                class="control-label option group relative border rounded-md py-3 px-4 flex items-center justify-center text-sm font-medium uppercase hover:bg-gray-50 focus:outline-none sm:flex-1 sm:py-6 bg-white text-gray-900"
                                for="attribute_<%= attributeId %>_<%= currentValue.attribute_value_id %>"
                            >
                            <span><% print (currentValue.output) %></span>
                            {# <span
                                class="absolute -inset-px rounded-md"
                                aria-hidden="true">
                            </span> #}

                    </label>
                    </input>
                </div>
            <% }); %>
        </div>


    </div>
</fieldset>
