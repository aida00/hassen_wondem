{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
<div class="layout-checkout-form lg:grid lg:grid-cols-5 lg:gap-5 xl:gap-6">
  <div class="lg:col-span-3">
    <div class="bg-white rounded-md shadow-custom-1 py-5 px-6 lg:pt-8 lg:pb-7 lg:px-10 mb-8 lg:mb-0">
      {{ form|without('sidebar', 'actions') }}
    </div>
  </div>
  <div class="lg:col-span-2">
    <div class="bg-white rounded-md shadow-custom-1 py-5 px-6 lg:pt-8">
      <h2 class="text-black font-semibold text-2xl lg:text-3xl mb-1">Order summary</h2>
      {{ form.sidebar }}
      {{ form.actions }}
    </div>
    <div class="go-back-button pt-3.5 pb-5 px-6">
      <a href="#" id="goback-button" class="hidden flex w-full justify-center border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 bg-transparent p-3.5 border-gray-300 text-lg leading-5 font-medium text-gray-700 hover:bg-gray-50 focus:ring-primary-500">
        Go Back
      </a>
    </div>
  </div>
</div>
