{# 
  File: form--wondem-application-form.html.twig
  Description: Tailwind styled application form
#}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-blue-600 to-indigo-700 py-12 px-4">
  <form{{ attributes.addClass('max-w-3xl w-full bg-white rounded-2xl shadow-2xl p-10 space-y-6') }}>
    <h1 class="text-3xl font-extrabold text-gray-900">
      Application Form
    </h1>
    <p class="text-gray-600">
      Fill out the form below to apply for a position with us.
    </p>

    <div class="space-y-6">
      {{ children }}
    </div>

    {# Render actions (submit button) via Drupal #}
    <div class="pt-6">
      {{ form.actions }}
    </div>
  </form>
</div>
