{#
  Custom Tailwind wrapper for Applications View
  File: views-view--applications.html.twig
#}
<div class="p-6 bg-gray-50 min-h-screen" x-data>
  {# --- Custom Header Banner --- #}
  <div class="mb-6 bg-gradient-to-r from-blue-600 to-indigo-700 text-white rounded-lg shadow p-6 text-center">
    <h2 class="text-2xl font-extrabold tracking-tight">
      Sky Medical Supplies LLC â€“ Best Place to Work!
    </h2>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-6">Applications</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full border border-gray-200 rounded-lg shadow bg-white">
      <thead class="bg-blue-600 text-white">
        <tr>
          {% for header in header %}
            <th scope="col" class="px-6 py-3 text-left text-sm font-semibold">
              {{ header.content }}
            </th>
          {% endfor %}
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        {% for row in rows %}
          <tr class="hover:bg-gray-50">
            {% for column in row.columns %}
              <td class="px-6 py-4 text-sm text-gray-700">
                {{ column.content }}
              </td>
            {% endfor %}
          </tr>
        {% else %}
          <tr>
            <td colspan="{{ header|length }}" class="px-6 py-4 text-center text-gray-500">
              No applications found.
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
