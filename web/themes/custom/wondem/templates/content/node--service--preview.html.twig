    <!-- Main container with grid layout -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-4 items-center">
        <!-- Left column: h3, p, p (3/4 width on medium screens and above) -->
        <div class="lg:col-span-3">
            <h3 class="mt-4 font-medium text-gray-900 capitalize">{{ label|field_value }}</h3>
            <p class="mt-2 font-medium text-gray-500">From {{ content.field_starting_price|field_value }}</p>
            <p class="italic text-gray-500">{{ content.field_rental_category|field_value }}</p>
            <a class="text-base font-semibold text-primary-600 hover:text-primary-500" href="{{ url }}">{{ 'REQUEST RENTALS'|t }}</a>
        </div>

        <!-- Right column: Image (1/4 width on medium screens and above) -->
        <div class="lg:col-span-1">
            <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg bg-gray-100 group-hover:opacity-75">
                <img src="{{ content.field_image.0|render|striptags('<img>')|trim|raw }}" loading="lazy" alt="{{ label|field_value }}" class="h-full w-full object-cover object-center">
            </div>
        </div>
    </div>
